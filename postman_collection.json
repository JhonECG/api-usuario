{
    "info": {
        "name": "API Usuarios",
        "description": "Colecci√≥n para consumir la API de usuarios",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
        },
        "item": [
        {
            "name": "Auth",
            "item": [
            {
                "name": "Register User",
                "request": {
                "method": "POST",
                "header": [
                    {
                    "key": "Content-Type",
                    "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securepassword\",\n  \"username\": \"exampleuser\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8000/auth/register",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "8000",
                    "path": ["auth", "register"]
                }
                }
            },
            {
                "name": "Login User",
                "request": {
                "method": "POST",
                "header": [
                    {
                    "key": "Content-Type",
                    "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securepassword\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8000/auth/login",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "8000",
                    "path": ["auth", "login"]
                }
                }
            }
            ]
        },
        {
            "name": "Users",
            "item": [
            {
                "name": "Get All Users",
                "request": {
                "method": "GET",
                "url": {
                    "raw": "http://localhost:8000/users?page=1&size=10",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "8000",
                    "path": ["users"],
                    "query": [
                    {
                        "key": "page",
                        "value": "1"
                    },
                    {
                        "key": "size",
                        "value": "10"
                    }
                    ]
                }
                }
            },
            {
                "name": "Get User by ID",
                "request": {
                "method": "GET",
                "url": {
                    "raw": "http://localhost:8000/users/1",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "8000",
                    "path": ["users", "1"]
                }
                }
            },
            {
                "name": "Update User",
                "request": {
                "method": "PUT",
                "header": [
                    {
                    "key": "Content-Type",
                    "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"updateduser@example.com\",\n  \"password\": \"newpassword\",\n  \"role\": \"admin\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8000/users/1",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "8000",
                    "path": ["users", "1"]
                }
                }
            },
            {
                "name": "Delete User",
                "request": {
                "method": "DELETE",
                "url": {
                    "raw": "http://localhost:8000/users/1",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "8000",
                    "path": ["users", "1"]
                }
                }
            },
            {
                "name": "Add or Update Address",
                "request": {
                "method": "POST",
                "header": [
                    {
                    "key": "Content-Type",
                    "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"country\": \"USA\",\n  \"city\": \"New York\",\n  \"street\": \"5th Avenue\",\n  \"postal_code\": \"10001\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8000/users/1/address",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "8000",
                    "path": ["users", "1", "address"]
                }
                }
            },
            {
                "name": "Verify Token",
                "request": {
                "method": "POST",
                "header": [
                    {
                    "key": "Content-Type",
                    "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"token\": \"your.jwt.token.here\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8000/users/verify-token",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "8000",
                    "path": ["users", "verify-token"]
                }
                }
            }
            ]
        }
    ]
}